<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/hippodrome.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/hippodrome.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <defaultRolloverStrategy>
                <delete>
                    <ifFileNameMatches>.*\.log</ifFileNameMatches>
                    <ifLastModified>7</ifLastModified>
                </delete>
            </defaultRolloverStrategy>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="Main" level="INFO">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="Hippodrome" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="Horse" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>